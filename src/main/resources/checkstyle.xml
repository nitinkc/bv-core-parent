<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "http://Checkstyle//DTD Checkstyle Configuration 1.3//EN",
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
  <module name="TreeWalker">
    <!-- No Star Imports -->
    <module name="AvoidStarImport"/>
    <!-- Class and interface naming conventions -->
    <module name="TypeName">
      <property name="format" value="^[A-Z][a-z]+(?:[A-Z][a-z]+)*$"/>
    </module>
    <!-- Package name naming conventions -->
    <module name="PackageName">
      <property name="format"
        value="^[a-z]+(\.[a-z][a-z0-9]*)*$"/>
    </module>
    <!-- methods naming conventions -->
    <module name="MethodName">
      <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
      <property name="allowClassName" value="true"/>
    </module>
    <!-- constant names conventions -->
    <module name="ConstantName">
      <property name="format"
        value="^log(ger)?$|^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$"/>
    </module>
    <!-- Checks NestedIfDepth -->
    <module name="NestedIfDepth">
      <property name="max" value="3"/>
    </module>
    <!-- Checks for "magic number" -->
    <module name="MagicNumber">
    </module>
    <!--Checks for Not used Local Variable-->
    <module name="UnusedLocalVariable">
    </module>
  </module>